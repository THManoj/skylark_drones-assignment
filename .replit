run = "streamlit run app.py --server.port 5000 --server.address 0.0.0.0"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "pip install -r requirements.txt && streamlit run app.py --server.port 5000 --server.address 0.0.0.0"]
deploymentTarget = "cloudrun"
ignorePorts = false

[[ports]]
localPort = 5000
externalPort = 80

[unitTest]
language = "python3"

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[debugger]
support = true

[debugger.interactive]
transport = "localhost:0"
startCommand = ["dap-python", "app.py"]
